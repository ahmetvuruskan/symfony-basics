{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
   <div>
        {% if posts|length >0 %}
            {% for post in posts %}
               <div> <a href="{{ path('micro_post_show_one', {'id': post.id}) }}">{{ post.title }}</a></div>
            {% endfor %}
        {% else %}
            <p>No Posts</p>
        {% endif %}
    </div>
{% endblock %}
